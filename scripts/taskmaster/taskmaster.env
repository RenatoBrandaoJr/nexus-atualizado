# Configurações do TaskMaster para integração com o Nexus

# Habilitar/desabilitar integração com TaskMaster
TASKMASTER_ENABLED=true

# Caminho para o diretório do TaskMaster (usar caminho absoluto)
# Se não for definido, usa o diretório atual do projeto
TASKMASTER_PATH=/Users/renatobrandao/Documents/Nexus atualizado

# Status padrão para novas tarefas
TASKMASTER_DEFAULT_STATUS=pending

# Prioridade padrão para novas tarefas
TASKMASTER_DEFAULT_PRIORITY=medium

# Intervalo de sincronização em segundos (para verificar alterações em arquivos)
TASKMASTER_SYNC_INTERVAL=5

# Mapeamento de status para colunas do Kanban (formato JSON)
# Este mapeamento define como os status do TaskMaster se relacionam com as colunas do quadro Kanban
TASKMASTER_STATUS_COLUMN_MAP='{"pending":"A fazer","in-progress":"Em andamento","review":"Revisão","done":"Concluído","deferred":"Adiado","cancelled":"Cancelado"}'

# Configuração de notificações
TASKMASTER_NOTIFICATIONS_ENABLED=true

# Nome do projeto no TaskMaster
TASKMASTER_PROJECT_NAME=Nexus
